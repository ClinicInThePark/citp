<!--booths/index-->
<% provide(:title,"All Organizations") %>

	<div class="row">
		<div class="col-sm-10 col-md-10">
	    <i class="glyphicon glyphicon-home">
			<h3 style="display:inline; padding-left:0px;">Organizations</h3> 
		</i>
	    
		<%= link_to new_booth_path, class:"btn btn-default btn-sm", id: "add_button" do %>
		  <i class="glyphicon glyphicon-plus"></i> <b>New Organization</b>
		<% end %>
		
	<hr>
		<table class="table table-striped table-hover" style="border: 1px solid rgb(224, 219, 219); border-radius: .3em;">
			<thead>
				<tr>
					<th><b><%=sortable "name"%></b></th>
					<th><b>Last Updated</b></th>
				</tr>
			</thead>
			<%@booths.each do |b|%>
				 <tr><!-- <tr data-link="<%=booth_path(b)%>">-->	
				    <td style="width:20%"><%=link_to b.name, b%></td>
				    <td style="width:20%"><%=b.updated_at.strftime("%B %d, %Y")%>
				    
					    <!--button for editing event-->
					    <%=link_to  edit_booth_path(b), class:"event-glyph-buttons" do %>
						     <i class="glyphicon glyphicon-pencil"></i>
						<% end %>
						
						<!--button for looking at an event-->
					    <%=link_to  booth_path(b), class: "event-glyph-buttons" do %>
					    	 <i class="glyphicon glyphicon-search"></i>
					    <% end %>
					    
					  </td>
				 </tr>
			<%end%>
		</table>
	</div>
	</div>
	
	<%=will_paginate @booths%>


<script>
	$(document).ready(function(){
    $("tr[data-link]").click(function() {
      window.location = this.dataset.link
    });
    
	$(".side-booth").addClass("active");

    
    $("tr[data-link").css("cursor","pointer");
});

</script>