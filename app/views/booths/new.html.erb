<% provide(:title ,"Add organization") %>
<h1> Add an Organization to the Passport System </h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@booth) do |f| %>
			<%= render 'shared/error_messages', object: f.object %> 

			<%=f.label :Organization_Name %>
			<%=f.text_field :name %>

			<%=f.label :service %>
			<%=f.text_field :service %>

			<%=f.label :Description_of_Organization %>
			<%=f.text_area :description %>

			<%=f.submit "Add Organization", class: "btn btn-large btn-primary" %>

		<% end %>
	</div>
</div>