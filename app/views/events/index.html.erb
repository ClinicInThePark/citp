<% provide(:title,"All Events") %>
<h3>All Events</h3>

<hr>
		<span class ="event-link"><%=link_to "Create New Event", new_event_path%></span>
		<div class="booths"	display="display:inline-block;">
			<table class="table table-striped">
				<thead>
					<tr>
						<th><b>Date<b></th>
						<th><b>Location<b></th>
						<th><b>Total Visitors<b></th>
					</tr>
				</thead>
				<%@events.each do |event|%>
						 <tr>	
						    <td><%=event.date%></td>
						    <td><%=event.location%></td>
						    <td><%=event.total_count%></td>
						    <td><%=link_to "Booths", event_path(event), remote: true,
						    	class: "btn btn-default" %></td>
						    <td><%=link_to "Edit", edit_event_path(event), 
						    	class: "btn btn-default" %></td>
						    <td><%= link_to "Delete", event, method: :delete, data: { confirm: "You sure?" },class: "btn btn-default"%></td>
						 <tr>
				<%end%>
			</table>
	</div>


<div id="task-form" style="display:none">
</div>

