<% provide(:title ,"New Event") %>

<h3>New Event</h3>

<div class="form">
	<div class="form-group">
		<%= form_for(@event) do |f| %>
			<%= render 'shared/error_messages', object: f.object %> 

			<%=f.label :date %> 
			<%=f.date_field :date %>

			<%=f.label :Location %>
			<%=f.text_field :location %> 

			<%=f.label :Attending_Organizations%>
			
			<div id="new-event-form"> 	
				<% @booths.each do |booth|%>
					<%=check_box_tag "booth_ids[]", booth.id%>
					<%=f.label booth.name %>
					<br>
				<%end%>
			</div>

			<br>
			Organization not found? <%=link_to "Add an organization!", new_booth_path%>
			<br><br>
			<%=f.submit "Create Event", class: "btn btn-large btn-primary" %>

		<% end %>
	</div>
</div>
