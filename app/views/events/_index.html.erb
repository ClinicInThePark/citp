<table class="table table-striped">
	<thead>
		<tr>
			<th><b>Date<b></th>
			<th><b>Location<b></th>
		</tr>
	</thead>
	<tbody>
	<%@events.each do |event|%>
		 <tr>	
		    <td><%=event.date%></td>
		    <td><%=event.location%></td>
		    <td><%=link_to "Booths", event_path(event), remote: true, 
		    	class: "btn btn-primary" %></td>
		    <td><%=link_to "Edit", edit_event_path(event), 
		    	class: "btn btn-primary" %></td>

		    <td><%= link_to "Delete", event, method: :delete, data: 
		    	{ confirm: "You sure?" }, 
		     	class: "btn btn-primary"%></td>
		 </tr>
	<%end%>
	</tbody>				
</table>